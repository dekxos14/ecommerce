{% extends "layouts/base_admin.twig" %}

{% block content_admin %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Lista de Usuários
            </h1>
            <ol class="breadcrumb">
                <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="/admin/users">Usuários</a></li>
                <li class="active"><a href="/admin/users/create">Cadastrar</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">Novo Usuário</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form action="{{ path_for('admin.create') }}" method="post">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="desperson">Nome</label>
                                    <input type="text" class="form-control {{ errors.desperson ? 'is-danger' : '' }}" id="desperson" name="desperson"
                                           placeholder="Digite o Nome">
                                    {% if errors.desperson %}
                                        <small class="has-text-danger">{{ errors.desperson | first }}</small>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label for="deslogin">Login</label>
                                    <input type="text" class="form-control {{ errors.deslogin ? 'is-danger' : '' }}" id="deslogin" name="deslogin"
                                           placeholder="Digite o Login">
                                    {% if errors.deslogin %}
                                        <small class="has-text-danger">{{ errors.deslogin | first }}</small>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label for="nrphone">Telefone</label>
                                    <input type="tel" class="form-control {{ errors.nrphone ? 'is-danger' : '' }}" id="nrphone" name="nrphone"
                                           placeholder="Digite o Telefone">
                                    {% if errors.nrphone %}
                                        <small class="has-text-danger">{{ errors.nrphone | first }}</small>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label for="desemail">E-mail</label>
                                    <input type="email" class="form-control {{ errors.desemail ? 'is-danger' : '' }}" id="desemail" name="desemail"
                                           placeholder="Digite o E-mail">
                                    {% if errors.desemail %}
                                        <small class="has-text-danger">{{ errors.desemail | first }}</small>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label for="despassword">Senha</label>
                                    <input type="password" class="form-control {{ errors.despassword ? 'is-danger' : '' }}" id="despassword" name="despassword"
                                           placeholder="**********">
                                    {% if errors.despassword %}
                                        <small class="has-text-danger">{{ errors.despassword | first }}</small>
                                    {% endif %}
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="inadmin" value="1"> Acesso de Administrador
                                    </label>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-success">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                    {% include "components/notifications.twig" %}
                </div>

            </div>

        </section>

        <!-- /.content -->
    </div>

    <!-- /.content-wrapper -->

{% endblock %}