{% extends "layouts/base_admin.twig" %}

{% block content_admin %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Lista de Usuários
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path_for('admin.main') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active"><a href="{{ path_for('admin.users') }}">Usuários</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">

                        <div class="box-header">
                            <a href="{{ path_for('admin.create') }}" class="btn btn-success">Cadastrar Usuário</a>
                        </div>

                        <div class="box-body no-padding">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Nome</th>
                                    <th>E-mail</th>
                                    <th>Login</th>
                                    <th style="width: 60px">Admin</th>
                                    <th style="width: 140px">&nbsp;</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user_person in user_persons %}
                                    <tr>
                                        <td>{{ user_person.idperson }}</td>
                                        <td>{{ user_person.desperson }}</td>
                                        <td>{{ user_person.desemail }}</td>
                                        <td>{{ user_person.user.deslogin }}</td>
                                        <td>{% if user_person.user.inadmin == 1 %}Sim{% else %}Não{% endif %}</td>
                                        <td>
                                            <a href="/hcode-slim-3/public/admin/edit/{{ user_person.idperson }}"
                                               class="btn btn-primary btn-xs"><i class="fa fa-edit"></i> Editar</a>
                                            <a href="/hcode-slim-3/public/admin/delete?id={{ user_person.idperson }}"
                                               onclick="return confirm('Deseja realmente excluir este registro?')"
                                               class="btn btn-danger btn-xs"><i class="fa fa-trash"></i> Excluir</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    {% include 'components/notifications.twig' %}
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}