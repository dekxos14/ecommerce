<div class="promo-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo1">
                    <i class="fa fa-money-check"></i>
                    <p>1 ano de garantia</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo2">
                    <i class="fa fa-truck"></i>
                    <p>Frete gr√°tis</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo3">
                    <i class="fas fa-lock"></i>
                    <p>Pagamento seguro</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo4">
                    <i class="fas fa-gift"></i>
                    <p>Novos produtos</p>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End promo area -->

<section class="section">
{#<div class="maincontent-area">#}
    <div class="zigzag-bottom"></div>
    <div class="content">
            <div class="column">
                <div class="latest-product">
                    <div class="is-flex is-justify-content-center">
                        <h2 class="title is-size-2">Products</h2>
                    </div>
                    <div class="carousel" id="bulma-carousel">

                        {% for product in products %}
                        <div class="single-product item-1">
                            <div class="product-f-image is-fullwidth">
                                <figure class="image is-3by4">
                                    <img src="{{ base_url()}}/images/{{ product.desimage }}.png" alt="product">
                                </figure>
                                <div class="product-hover">
                                    <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                    <a href="#" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                </div>
                            </div>
                            <h2><a href="/hcode-slim-3/public/site/product_detail?id={{ product.idproduct }}">{{ product.desproduct }}</a></h2>
                            <div class="product-carousel-price">
                                <ins>{{ product.vlprice | format_currency('BRL') }}</ins>  {# ISO 4217 #}
                            </div>
                        </div>
                        {% endfor %}


                    </div>
                </div>
            </div>
    </div>
{#</div> <!-- End main content area -->#}
</section>

